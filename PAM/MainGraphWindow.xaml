<Window x:Class="PAM.MainGraphWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:l="clr-namespace:PAM"
		xmlns:forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
		Title="PAM" Height="598" Width="694" Icon="/PAM;component/Resources/App.ico"
		Loaded="FormLoaded">
	<Grid>
		<l:NotificationAreaIcon 
					  Text="PAM" 
					  Icon="Resources\NotificationAreaIcon.ico"
					  MouseDoubleClick="OnNotificationAreaIconDoubleClick">
			<l:NotificationAreaIcon.MenuItems>
				<forms:MenuItem Text="Open" Click="OnMenuItemOpenClick" DefaultItem="True" />
				<forms:MenuItem Text="-" />
				<forms:MenuItem Text="Exit" Click="OnMenuItemExitClick" />
			</l:NotificationAreaIcon.MenuItems>
		</l:NotificationAreaIcon>
		<Border Margin="10" CornerRadius="15">
			<StackPanel Orientation="Vertical">
				<!--aktualna aplikacja-->
				<StackPanel Orientation="Horizontal">
					<Image Name="appIcon" Stretch="None" StretchDirection="DownOnly"></Image>
					<StackPanel>
						<StackPanel Orientation="Horizontal">
							<Label>Nazwa aplikacji :</Label>
							<Label Name="appNameLabel"/>
						</StackPanel>
						<StackPanel Orientation="Horizontal">
							<Label>Ścieżka :</Label>
							<Label Name="appPathLabel"/>
						</StackPanel>
						<StackPanel Orientation="Horizontal">
							<Label>Producent :</Label>
							<Label Name="appManufacturer"/>
						</StackPanel>
						<StackPanel Orientation="Horizontal">
							<Label>Czas użycia :</Label>
							<Label Name="appUsage"/>
						</StackPanel>

					</StackPanel>
				</StackPanel>
				<!--koniec aktualnej aplikacji-->
				<StackPanel Orientation="Vertical" Name="apps"> 
					<!--lista wszystkich aplikacji--> 
				
					<!--koniec listy wszystkich aplikacji--> 
				</StackPanel>
			</StackPanel>

		</Border>
	</Grid>
</Window>
